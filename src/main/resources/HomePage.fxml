      <HBox prefHeight="1080.0" prefWidth="1875.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Left 30% - Black section with buttons -->
            <StackPane prefWidth="562.5" style="-fx-background-color: black;" HBox.hgrow="NEVER">
               <children>
                  <VBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="PlayButton" maxWidth="200.0" mnemonicParsing="false" onAction="#handlePlay" prefHeight="60.0" prefWidth="200.0" styleClass="white-shadow-button-gray" text="Play" />
