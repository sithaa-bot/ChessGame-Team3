                        <Button fx:id="AboutUsButton" maxWidth="200.0" mnemonicParsing="false" onAction="#handleAboutUs" prefHeight="60.0" prefWidth="200.0" styleClass="white-shadow-button-gray" text="About Us" />
                     </children>
                  </VBox>
               </children>
            </StackPane>
            
            <!-- Right 70% - White section with content -->
            <VBox prefWidth="1312.5" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
               <children>
                  <!-- Top Section with ITC Logo -->
                  <StackPane VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                     <children>
                        <ImageView fitHeight="120.0" fitWidth="120.0" preserveRatio="true" StackPane.alignment="CENTER">
                           <image>
                              <Image url="@img/itc.png" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
                  
                  <!-- Chess Image Section -->
                  <StackPane VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                     <children>
                        <ImageView fitHeight="500.0" fitWidth="600.0" preserveRatio="true" StackPane.alignment="CENTER">
                           <image>
                              <Image url="@img/Chess.jpg" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
                  
                  <!-- Bottom Section with Labels -->
                  <VBox spacing="20.0" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="40.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                     <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="game-quote-label" text="The Battle Begins Now" />
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="timesNewRoman" text="Institute of Technology of Cambodia" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
