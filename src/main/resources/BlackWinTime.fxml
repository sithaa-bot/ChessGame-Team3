<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.BlackTimeoutWinController">
   <children>
      <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@img/Background.jpg" />
         </image>
      </ImageView>
      
      <StackPane style="-fx-background-color: rgba(0,0,0,0.4);" />
      
      <VBox alignment="CENTER" maxWidth="800.0" spacing="40.0">
         <children>
            <ImageView fitHeight="120.0" fitWidth="120.0" preserveRatio="true">
               <effect>
               
             
                  <DropShadow color="ORANGE" radius="15.0" />
               </effect>
               <image>
                  <Image url="@img/RedTime.png" />
               </image>
            </ImageView>
            
   
                 <Label text="TIME'S UP!" textAlignment="CENTER" textFill="ORANGE">
               <font>
                  <Font name="System Bold" size="72.0" />
               </font>
               <effect>
                  <DropShadow color="BLACK" offsetX="3.0" offsetY="3.0" radius="5.0" />
         
               </effect>
            </Label>
            
            <Label text="Black Player Wins!" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="48.0" />
               </font>
               <effect>
                  <DropShadow color="BLACK" offsetX="2.0" offsetY="2.0" radius="3.0" />
         
               </effect>
            </Label>
            
            <Label text="Victory achieved! Your opponent ran out of time." textAlignment="CENTER" textFill="LIGHTGRAY" wrapText="true">
               <font>
                  <Font name="System" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
           
                </VBox.margin>
            </Label>
            
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 15; -fx-padding: 30;">
               <children>
                  <Label text="Game Statistics" textFill="BLACK">
 
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
             
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER" spacing="40.0">
                           <children>
                              <Label fx:id="movesCountLabel" textFill="BLACK">
                 
                                 <font>
                                    <Font name="System" size="18.0" />
                                 </font>
            
                              </Label>
                           </children>
                        </HBox>
                       <Label fx:id="timeRemainingLabel" text="Your Remaining Time: " textFill="GREEN">
 
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
             
                        </Label>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
           
                 <HBox alignment="CENTER" spacing="30.0">
               <children>

                  <Button fx:id="homeButton" mnemonicParsing="false" onAction="#handleGoHome" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Main Menu">
                     <effect>
                        <DropShadow color="BLACK" radius="3.0" />
                     </effect>
                  </Button>
    
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Exit Game">
                     <effect>
                        <DropShadow color="BLACK" radius="3.0" />
                     </effect>
                  </Button>
    
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
